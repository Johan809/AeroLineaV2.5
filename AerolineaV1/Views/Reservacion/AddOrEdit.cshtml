@model AerolineaV1.Models.Reservacion

@{
    ViewData["Title"] = "Info";
}

<h4>Datos de la Reservacion</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReservaID" />
            <div class="form-group">
                <label asp-for="NombreCliente" class="control-label"></label>
                <select asp-for="NombreCliente" class="form-control col-md-12" asp-items="@(new SelectList(ViewBag.Clientes,"NombreCompleto","NombreCompleto","Elije un Cliente"))"></select>
                @*<input asp-for="NombreCliente" class="form-control" />*@
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaisDestino" class="control-label"></label>
                <select asp-for="PaisDestino" class="form-control col-md-12" asp-items="@(new SelectList(ViewBag.Vuelos,"Destino","Destino","Elije un Destino"))"></select>
                @*<input asp-for="PaisDestino" class="form-control" />*@
                <span asp-validation-for="PaisDestino" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="CategoriaVuelo" class="control-label"></label>
                    <select asp-for="CategoriaVuelo" class="form-control col-md-12">
                        <option defaultSelected>Elija una Categoria</option>
                        <option value="Economica">Economica</option>
                        <option value="Ejecutiva">Ejecutiva</option>
                        <option value="Primera Clase">Primera Clase</option>
                    </select>
                    <span asp-validation-for="CategoriaVuelo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PosAsiento" class="control-label"></label>
                    <select asp-for="PosAsiento" class="form-control col-md-12">
                        <option defaultSelected>Elija la Posicion del Asiento</option>
                        <option value="P">Pasillo</option>
                        <option value="V">Ventanilla</option>
                    </select>
                    <span asp-validation-for="PosAsiento" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Enviar" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Lista Reservas</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
